<%= @entry.content %>
<% if @entry.user_id == current_user.id %>
    <%= link_to 'Edit', edit_entry_path(@entry) %>
<% end %>
<% unless current_user == @entry.user %>
  <div class="comment_form_container">
    <%= render 'comments/form' %>
  </div>
<% end %>
<% if @comments.any? %>
<ol class="comments">
  <%= render @comments %>
</ol>
<% end %>