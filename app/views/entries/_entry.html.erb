<li id="entry-<%= entry.id %>">
  <span class="content">
    <%= entry.content %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(entry.created_at) %> ago.
  </span>
  <% if others %>
    <span class="user">
      <%= entry.user.email %>
    </span>
  <% end %>
  <span class="links">
    <%= link_to "View", entry %>
    <% if entry.user_id == current_user.id %>
      <%= link_to "Edit", edit_entry_path(entry) %>
    <% end %>
  </span>
</li>